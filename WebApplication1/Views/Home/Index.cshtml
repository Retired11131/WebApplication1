
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .calculator {
            border: 2px solid #333;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 300px;
        }

            .calculator input, .calculator button {
                width: 100%;
                font-size: 1.2em;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
                box-sizing: border-box;
                margin-top:10px;
                margin-bottom:10px;
            }

            .calculator button {
                background-color: #4CAF50;
                color: white;
                cursor: pointer;
            }


            .calculator button:hover {
            background-color: #45a049;
            }

            .modification{
                margin:15px;
            }
    </style>
</head>
<body>
    <div class="calculator">
        <form action="/Home/Calculate" method="post">
            
            @if (ViewBag.Result != null)
            {
                <input id="number1" name="number1"  placeholder="Число 1" required  value=@ViewBag.Result>
            }
            @if (ViewBag.Result == null)
            {
                <input id="number1" name="number1" required placeholder="Число 1">
            }
            <input name="number2" placeholder="Число 2" required>

            <button name="operation" style="margin-top:20px" type="submit" value="+">+</button>
            <button name="operation" style="margin-top:20px" type="submit" value="-">-</button>
            <button name="operation" style="margin-top:20px" type="submit" value="/">/</button>
            <button name="operation" style="margin-top:20px" type="submit" value="*">*</button>
        </form>
    </div>
</body>

